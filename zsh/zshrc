# Path to your oh-my-zsh installation.
export ZSH=$HOME/.oh-my-zsh

ZSH_THEME="nanotech"
plugins=(git zsh-syntax-highlighting)
source $ZSH/oh-my-zsh.sh

unsetopt AUTO_CD

if [ -d /Users/alex ]; then
  export PATH="/Users/alex/bin:/Users/alex/.cargo/bin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/share/npm/bin"
fi

if type nvim > /dev/null 2>&1; then
  alias vim='nvim'
  alias vi='nvim'
  export EDITOR='nvim'
else
  export EDITOR='vim'
fi

# Node Version Manager
export NVM_DIR="$HOME/.nvm"
. "/usr/local/opt/nvm/nvm.sh"

# yarn
export PATH="$PATH:`yarn global bin`"

# rbenv shims
export PATH="$HOME/.rbenv/bin:$PATH"''
if which rbenv > /dev/null; then eval "$(rbenv init -)"; fi

# pyenv
export PATH="/Users/alex/.pyenv/bin:/Users/alex/.local/bin:$PATH"
eval "$(pyenv init -)"
eval "$(pyenv virtualenv-init -)"

# asdf version-manager
. $HOME/.asdf/asdf.sh
. $HOME/.asdf/completions/asdf.bash

# docker helper functions
. $HOME/.dockerfunc

# syntax-highlighting in less
# requires highlight (`brew install highlight`)
export LESSOPEN="| $(which highlight) %s --out-format xterm256 --line-numbers --quiet --force --style relaxedgreen"
export LESS=" -R"
alias less='less -m -N -g -i -J --line-numbers --underline-special'
alias more='less'

# aliases
alias cdn='cd ~/source/nutshell'
alias cdncs='cd ~/source/nutshell/client/client_modules/nutshell-client-shared'
alias cdnce='cd ~/source/nutshell/client-extensions'
alias cdf='cd ~/flux'
alias cdth='cd ~/p/gruvbox-dark-ui'
alias cdr='cd ~/r'
alias cdd='cd ~/r/dotfiles'

alias gbrm="git branch | grep -v "master" | xargs git branch -D"

commit_dotfiles() {
    if [[ -d ~/r/dotfiles ]]; then
        pushd ~/r/dotfiles && git add -A && git commit -m $1 && git push && popd
    fi
}

# work stuff
if [[ -d "$HOME/nub" ]]; then
	eval "$($HOME/nub/bin/nub init -)"
fi

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
